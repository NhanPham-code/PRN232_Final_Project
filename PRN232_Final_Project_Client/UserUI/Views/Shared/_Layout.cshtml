@* @using DataAccess.Models *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BakeryShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #d4a574;
            --secondary-color: #8b4513;
            --accent-color: #ff6b6b;
            --text-dark: #2c1810;
            --text-light: #6b4c3b;
            --background-light: #fefcf8;
            --background-cream: #f9f5f0;
            --shadow-light: rgba(212, 165, 116, 0.1);
            --shadow-medium: rgba(212, 165, 116, 0.2);
            --gradient-warm: linear-gradient(135deg, #d4a574 0%, #c89660 100%);
            --gradient-soft: linear-gradient(135deg, #fefcf8 0%, #f9f5f0 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--background-light);
            color: var(--text-dark);
            line-height: 1.6;
        }

        /* HEADER (Navbar) */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(212, 165, 116, 0.1);
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .navbar.scrolled {
            background: rgba(255, 255, 255, 0.98);
            box-shadow: 0 8px 32px var(--shadow-light);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-family: 'Dancing Script', cursive;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary-color);
            text-decoration: none;
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
            color: var(--secondary-color);
        }

        .navbar-brand img {
            height: 45px;
            margin-right: 10px;
            filter: drop-shadow(0 2px 8px var(--shadow-light));
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: var(--text-light);
            margin: 0 0.75rem;
            padding: 0.75rem 1.25rem !important;
            border-radius: 25px;
            position: relative;
            transition: all 0.3s ease;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }

        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            color: white;
            background: var(--gradient-warm);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px var(--shadow-medium);
        }

        .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 50%;
            width: 0;
            height: 2px;
            background: var(--accent-color);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .navbar-nav .nav-link:hover::after,
        .navbar-nav .nav-link.active::after {
            width: 80%;
        }

        .search-bar {
            position: relative;
            margin-right: 1.5rem;
        }

        .search-bar input {
            border-radius: 30px;
            padding: 0.75rem 1.25rem 0.75rem 3rem;
            border: 2px solid transparent;
            background: var(--background-cream);
            color: var(--text-dark);
            font-weight: 400;
            width: 280px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow-light);
        }

        .search-bar input:focus {
            outline: none;
            border-color: var(--primary-color);
            background: white;
            box-shadow: 0 8px 25px var(--shadow-medium);
            transform: translateY(-2px);
        }

        .search-bar::before {
            content: '\f002';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            z-index: 10;
        }

        .navbar-icons {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .icon-link {
            position: relative;
            padding: 0.75rem;
            border-radius: 50%;
            background: var(--background-cream);
            color: var(--text-light);
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow-light);
        }

        .icon-link:hover {
            background: var(--gradient-warm);
            color: white;
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 12px 30px var(--shadow-medium);
        }

        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--accent-color);
            color: white;
            border-radius: 50%;
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            font-weight: 600;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .dropdown-menu {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            padding: 1rem 0;
            margin-top: 0.5rem;
            min-width: 200px;
        }

        .dropdown-item {
            padding: 0.75rem 1.5rem;
            color: var(--text-light);
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 0;
        }

        .dropdown-item:hover {
            background: var(--gradient-warm);
            color: white;
            transform: translateX(10px);
        }

        /* MAIN CONTENT */
        main {
            min-height: calc(100vh - 200px);
            padding-top: 2rem;
            padding-bottom: 3rem;
        }

        /* FOOTER */
        footer.custom-footer {
            background: linear-gradient(135deg, #2c1810 0%, #3d2317 100%);
            color: #f9f5f0;
            padding: 3rem 0 1.5rem;
            margin-top: 4rem;
            position: relative;
            overflow: hidden;
        }

        footer.custom-footer::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50%;
            width: 200%;
            height: 100px;
            background: var(--gradient-warm);
            transform: rotate(-2deg);
            opacity: 0.1;
        }

        .footer-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-section h5 {
            font-family: 'Dancing Script', cursive;
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 1rem;
            position: relative;
        }

        .footer-section h5::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 50px;
            height: 2px;
            background: var(--accent-color);
        }

        .footer-section p,
        .footer-section a {
            margin: 0.5rem 0;
            color: #d4c4b8;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .footer-section a:hover {
            color: var(--primary-color);
            transform: translateX(5px);
        }

        .footer-section i {
            margin-right: 0.75rem;
            width: 20px;
            color: var(--primary-color);
        }

        .footer-logo {
            text-align: center;
            grid-column: 1 / -1;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(212, 165, 116, 0.2);
        }

        .footer-logo img {
            height: 60px;
            filter: drop-shadow(0 4px 15px rgba(212, 165, 116, 0.3));
            transition: transform 0.3s ease;
        }

        .footer-logo img:hover {
            transform: scale(1.1) rotate(5deg);
        }

        .footer-copyright {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
            opacity: 0.8;
        }

        /* MOBILE RESPONSIVENESS */
        @@media (max-width: 991px) {
            .navbar-nav {
                background: rgba(255, 255, 255, 0.95);
                backdrop-filter: blur(20px);
                border-radius: 20px;
                padding: 1rem;
                margin-top: 1rem;
                box-shadow: 0 10px 30px var(--shadow-light);
            }

            .search-bar input {
                width: 100%;
                margin: 1rem 0;
            }

            .navbar-icons {
                justify-content: center;
                margin-top: 1rem;
            }
        }

        @@media (max-width: 768px) {
            .footer-container {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .footer-section h5::after {
                left: 50%;
                transform: translateX(-50%);
            }
        }

        /* SMOOTH SCROLLING */
        html {
            scroll-behavior: smooth;
        }

        /* LOADING ANIMATION */
        .loading {
            opacity: 0;
            animation: fadeIn 0.8s ease-in-out forwards;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* CUSTOM SCROLLBAR */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--background-cream);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--gradient-warm);
            border-radius: 20px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary-color);
        }
    </style>
</head>

<body class="loading">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/logo/logo.png" alt="BakeryShop Logo" />
                    <span>Bakery Shop</span>
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars" style="color: var(--primary-color); font-size: 1.5rem;"></i>
                </button>

                <!-- Navbar -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")"
                               asp-controller="Product" asp-action="Index" asp-route-categoryId="0">
                                <i class="fas fa-birthday-cake me-2"></i>Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                               asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope me-2"></i>Contact
                            </a>
                        </li>
                    </ul>

                    <!-- Search bar -->
                    <form class="search-bar" asp-action="Search" asp-controller="Product">
                        <input class="form-control" type="search" name="searchKey" placeholder="Search delicious treats..." aria-label="Search" />
                    </form>

                    <!-- Icons: Cart + User -->
                    <div class="navbar-icons">
                        <a href="/Cart" class="icon-link" aria-label="Shopping Cart">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-badge">3</span>
                        </a>

                        <div class="dropdown">
                            @if (Context.Session.GetInt32("UserToken") != null)
                            {
                                <a class="icon-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-action="Profile" asp-controller="Common">
                                        <i class="fas fa-user-circle me-2"></i>Profile
                                    </a></li>
                                    <li><a class="dropdown-item" asp-action="History" asp-controller="Orders">
                                        <i class="fas fa-history me-2"></i>Order History
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Common">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a></li>
                                </ul>
                            }
                            else
                            {
                                <a class="icon-link" asp-action="Login" asp-controller="Common">
                                    <i class="fas fa-sign-in-alt"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="custom-footer">
        <div class="container">
            <div class="footer-container">
                <div class="footer-section">
                    <h5>Contact Us</h5>
                    <p><i class="fas fa-envelope"></i>cakywordvietnam@gmail.com</p>
                    <p><i class="fas fa-phone"></i>093 974 0742 (08h00 – 17h00)</p>
                    <p><i class="fas fa-mobile-alt"></i>091 575 1200 (07h00 – 22h00)</p>
                </div>
                <div class="footer-section">
                    <h5>Visit Our Store</h5>
                    <p><i class="fas fa-map-marker-alt"></i>600, đường Nguyễn Văn Cừ (nối dài)</p>
                    <p><i class="fas fa-building"></i>Phường An Bình, quận Ninh Kiều</p>
                    <p><i class="fas fa-city"></i>TP. Cần Thơ, Vietnam</p>
                </div>
                <div class="footer-section">
                    <h5>Follow Us</h5>
                    <a href="#"><i class="fab fa-facebook"></i>Facebook</a>
                    <a href="#"><i class="fab fa-instagram"></i>Instagram</a>
                    <a href="#"><i class="fab fa-youtube"></i>YouTube</a>
                    <a href="#"><i class="fab fa-tiktok"></i>TikTok</a>
                </div>
                <div class="footer-section">
                    <h5>Store Hours</h5>
                    <p><i class="fas fa-clock"></i>Monday - Friday: 7:00 AM - 9:00 PM</p>
                    <p><i class="fas fa-clock"></i>Saturday: 7:00 AM - 10:00 PM</p>
                    <p><i class="fas fa-clock"></i>Sunday: 8:00 AM - 8:00 PM</p>
                </div>
            </div>
            
            <div class="footer-logo">
                <img src="/img/logo/logo.png" alt="BakeryShop Logo" />
                <div class="footer-copyright">
                    <p>&copy; 2025 BakeryShop. All rights reserved. Made with <i class="fas fa-heart" style="color: var(--accent-color);"></i> for sweet moments.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Loading animation
        document.addEventListener('DOMContentLoaded', function() {
            document.body.classList.add('loading');
        });

        // Smooth hover effects for interactive elements
        document.querySelectorAll('.nav-link, .icon-link, .dropdown-item').forEach(element => {
            element.addEventListener('mouseenter', function() {
                this.style.transform = this.style.transform || 'scale(1.05)';
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>