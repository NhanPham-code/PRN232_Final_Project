<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact - Caky Word</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Link GG Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <style>
        .feedback-list-container {
            width: 80%;
            margin: 20px auto;
        }

        .feedback-item {
            display: flex;
            align-items: flex-start;
            background: #fffaf4;
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            transition: background 0.3s ease;
        }

            .feedback-item:hover {
                background: #fff1e6;
            }
       
        .avatar img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #f7b267;
            margin-right: 15px;
        }

        .feedback-content {
            flex: 1;
        }

        .user-name {
            font-weight: bold;
            color: #453426;
            font-size: 1rem;
        }

        .description {
            color: #1a4378;
            font-style: italic;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .timestamp {
            font-size: 0.85rem;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="feedback-list-container">
        @foreach (var feedback in Model)
        {
            <div class="feedback-item">
                <div class="avatar">
                    <img src="~/img/contact/user-svgrepo-com.svg" alt="Avatar" />
                </div>
                <div class="feedback-content">
                   
                    <div class="description">"@feedback.Description"</div>
                    <div class="timestamp">@feedback.SubmittedDate.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
        }
    </div>
</body>
</html>
