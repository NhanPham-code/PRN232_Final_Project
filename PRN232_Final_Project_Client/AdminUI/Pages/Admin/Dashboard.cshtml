@page
@model AdminUI.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Trang quản trị";
}

<div class="container py-4">
    <h2 class="mb-4">👋 Chào mừng, @User.Identity.Name!</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">🛠️ Quản lý sản phẩm</h5>
                    <p class="card-text">Thêm, sửa, xóa sản phẩm trong hệ thống.</p>
                    <a asp-page="/Admin/ProductManagement" class="btn btn-primary">Vào</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">📂 Quản lý danh mục</h5>
                    <p class="card-text">Tạo và cập nhật các danh mục sản phẩm.</p>
                    <a asp-page="/Category" class="btn btn-primary">Vào</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">👤 Quản lí người dùng</h5>
                    <p class="card-text">Quản lí danh sách khách hàng</p>
                    <a asp-page="/Admin/UserManagement" class="btn btn-primary">Vào</a>
                </div>
            </div>
        </div>
    </div>
</div>
